<Window x:Class="P3_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Это кнопка" Grid.Column="1" HorizontalAlignment="Center" x:Name="knopka"  VerticalAlignment="Top" Click="knopka_Click" />
        <ProgressBar Height="20" Margin="20, 0, 20, 0" Grid.ColumnSpan="3" Name="pb" />
        <Canvas Grid.Row="1" Grid.ColumnSpan="3">
            <InkCanvas HorizontalAlignment="Left" Height="217" VerticalAlignment="Center" Width="798"></InkCanvas>
        </Canvas>
        <Label x:Name="lb" Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="169,158,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
